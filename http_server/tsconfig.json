{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "outDir": "./dist",
    "rootDir": ".",
    "watch": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "./src/*"
      ]
    },
    "rootDirs": [".", "./src"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "index.ts", "init"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
